<view class="container">
  <view class="login-icon">
    <image class="login-img" src="/images/index.jpg"></image>
  </view>
  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="/images/index-icon/username.png"></image>
      <label class="loginLab"><text decode="{{true}}">账&nbsp;&nbsp;&nbsp;&nbsp;号</text></label>
      <input class="inputText" placeholder="请输入学号" bindinput="phoneInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="/images/index-icon/password.png"></image>
      <label class="loginLab"><text decode="{{true}}">密&nbsp;&nbsp;&nbsp;&nbsp;码</text></label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
    <view class="line"></view>
    

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">绑定</button>
    </view>
  </view>
</view>