.swiper-view{
  margin: 10rpx 30rpx 0rpx 30rpx;
}
swiper{
  width:100%;
  height:450rpx;
}

swiper image{
  width:100%;
  height:400rpx; 
  border-radius: 15rpx;
}
.swiper-item{
  height: 60%;
}

.containner{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding-bottom: 5px;
}
.foot-img{
  width:100%;
  height:450rpx
}
.row-icon{
  display: flex;
  flex-direction: row;
  margin-top:20rpx;
  flex-wrap: wrap;
  flex-basis: 20%;
}
.iocn{
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
}
.icon-img{
  height: 130rpx;
  width: 130rpx;
}
.icon-text{
  text-align:center;
}

.hd {
  position: fixed;
  top: 910rpx;
  left: 50%;
  width: 1000rpx;
  margin-left: -500rpx;
  height: 200rpx;
  transition: all .35s ease;
}
.wave {
  position: fixed;
  z-index: 3;
  right: 0;
  bottom: 0;
  opacity: 0.725;
  height: 300rpx;
  width: 2250rpx;
  animation: wave 10s linear infinite;
}
.wave-bg {
  z-index: 1;
  animation: wave-bg 10.25s linear infinite;
}
@keyframes wave{
  from {transform: translate3d(125rpx,0,0);}
  to {transform: translate3d(1125rpx,0,0);}
}
@keyframes wave-bg{
  from {transform: translate3d(375rpx,0,0);}
  to {transform: translate3d(1375rpx,0,0);}
}