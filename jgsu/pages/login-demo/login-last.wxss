.container{
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #fff; 
}

.login-view{
 flex: none; 
 width:100%;
}
  /*登录图片*/ 
.login-head-img{
 width: 750rpx;
 height: 450rpx;
}
.login-form{
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.login-one-row{
  display: flex;
  flex-direction: row;
  background-color: #fff; 
  line-height: 44px; 
}
.login-icon{
 margin-left: 22px; 
 margin-top: 30rpx;
 width: 14px; 
 height: 14px 
}
.login-text{
 margin: 0 5rpx 0 20rpx; 
 color: #545454; 
 font-size: 14px;
 width: 120rpx;
 text-align: left;
}
.login-input{
 text-align: left; 
 margin-right: 16rpx;
 margin-left: 0rpx; 
 margin-top: 14rpx; 
 color: #cccccc; 
 font-size: 14px;
 width: 450rpx;
}
.login-input-code{
 text-align: left; 
 margin-right: 16rpx; 
 margin-top: 14rpx; 
 color: #cccccc; 
 font-size: 14px;
 width: 450rpx;
 margin-left: 10px
}
.login-text-code{
 margin-right: 9rpx;
 margin-left: 30rpx;
 color: #545454; 
 font-size: 14px;
 width: 132rpx;
 text-align: left;
}
.login-code-img{
 width:200rpx;
 height: 55rpx;
 margin-right: 50rpx;
 margin-top: 10rpx;
}
.line { 
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 1px; 
} 
.login-btn-view{
 width: 100%; 
 height: auto; 
 background-color: #fff; 
 margin-top: -10px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
}
.login-btn{
 width: 50%; 
 margin-top: 20px; 
 color: #7acfa6;
}