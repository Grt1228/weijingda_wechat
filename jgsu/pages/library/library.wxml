<view class='container'>
  <view class='form-view'>
    <form class='form' bindsubmit="formSubmit">
      <view class='eduName'>
        <text class='eduName-text'>井冈山大学图书馆</text>
      </view>
      <view class='input-studentid'>
        <input class='input' name='bookUserName' placeholder='学号' placeholder-style='background-color: #e6e6e6;border-radius: 10px;text-align: center;'></input>
      </view>
      <view class='input-password'>
        <input class='input' name='bookPassword' placeholder='密码' placeholder-style='background-color: #e6e6e6;border-radius: 10px;text-align: center;' password='true'></input>
      </view>
      <view class='text'>
        <text>密码与图书馆密码一致，初始密码为学号</text>
      </view>
      <view class='button'>
        <button plain='true' formType="submit">绑定</button>
      </view>
    </form>
  </view>
</view>