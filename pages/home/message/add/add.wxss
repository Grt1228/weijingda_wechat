page{
 background-color: #f7f7f7;
}
.container{
  display: flex;
  flex-direction: column;
}
.head{
 display: flex;
 flex-direction: column;
}
.head-img{
  width: 120rpx;
  height: 120rpx;
  padding: 0 315rpx;
  padding-top: 30rpx;
}
.head-text{
  font-size: 20rpx;
  text-align: center;
  margin-top: 25rpx;
}
.body{
  display: flex;
  flex-direction: column;
}
.body-input-view{
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
}
.body-text{
  padding-top: 15rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.body-input{
  background-color: #ffffff;
  height: 100rpx;
}
.body-textarea{
  background-color: #ffffff;
  height: 200rpx;
  width: 100%;
}
.body-button{
 width: 60%; 
 margin-top: 15px; 
 color: #D51007;
}