/* pages/form/pages/rules/index.wxss */
page {
  background: #f7f7f7;
}

.container {
  max-width: 100vw;
  overflow-x: hidden;
}
.form-view{
  margin-top: 40rpx;
  background: #ffffff;
  height: 1100rpx;
}

.group-label {
  font-size: 28rpx;
  color: #333;
  display: flex;
  box-sizing: border-box;
  height: 88rpx;
  align-items: flex-start;
}
.imput-view{
  margin-bottom: 30rpx;
  margin-top: 40rpx;
}
.group-label text {
  font-size: 28rpx;
  color: #333;
  width: 170rpx;
  padding-left: 25rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
}

.textarea-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image-view{
  font-size: 28rpx;
  color: #333;
  display: flex;
  box-sizing: border-box;
  height: 88rpx;
  align-items: flex-start;
  flex-direction: column;
  margin-top: 40rpx;
}

.image-view text {
  font-size: 28rpx;
  color: #333;
  width: 170rpx;
  padding-left: 25rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
}
.image{
  padding-left: 25rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.button-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 250rpx;
}
